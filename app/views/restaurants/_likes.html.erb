<div id="likes_container-<%= restaurant.id %>">
<% if current_user== nil %>
  <%= link_to("/users/sign_in") do %>
    <span class="fa fa-heart like-btn"></span>
  <% end %>

<% elsif current_user.likes.find_by(restaurant_id: restaurant.id) %>
  <%= link_to restaurant_likes_path(restaurant),method: :delete, remote: true  do %>
    <span class="fa fa-heart like-btn-unlike"></span>
  <% end %>
<% else %>
  <%= link_to restaurant_likes_path(restaurant), method: :post, remote: true  do %>
    <span class="fa fa-heart like-btn"></span>
  <% end %>
<% end %>
<%= restaurant.likes.count %>
</div>
